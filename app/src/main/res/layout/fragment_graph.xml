<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    tools:context=".GraphFragment">

    <Spinner
        android:id="@+id/spinner_graph_type"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:backgroundTint="#4B9DDE" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/spinner_graph_type"
        android:layout_above="@id/slider_x_axis_range"
        android:layout_marginTop="16dp"
        android:layout_weight="1"/>

    <SeekBar
        android:id="@+id/slider_x_axis_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:max="100"
        android:progress="0"/>
</RelativeLayout>